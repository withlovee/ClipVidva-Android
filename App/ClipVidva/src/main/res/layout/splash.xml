<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffcc0000"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/logo"
            android:layout_marginTop="14dp"/>

    <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:onClick="goToCategory"
            android:layout_marginTop="22dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:src="@drawable/splash_button"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/splash_watch_clip_icon"
                android:layout_alignParentTop="true"
                android:text="@string/icon_video"
                android:textSize="75dp"
                android:layout_marginTop="15dp"
                android:textColor="#ffcc0000"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/splash_watch_clip_text"
                android:layout_alignParentBottom="true"
                android:text="ดูวีดีโอ"
                android:textSize="24dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffcc0000"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:src="@drawable/splash_button"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/splash_exam_icon"
                android:layout_alignParentTop="true"
                android:text="@string/icon_pencil"
                android:textSize="75dp"
                android:layout_marginTop="15dp"
                android:textColor="#ffcc0000"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/splash_exam_text"
                android:layout_alignParentBottom="true"
                android:text="แบบฝึกหัด"
                android:textSize="24dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffcc0000"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>